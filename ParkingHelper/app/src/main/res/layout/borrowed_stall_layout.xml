<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="17">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Owner"
        android:id="@+id/OwnerBorrowedStall"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="adapterClickUserName"
        android:nestedScrollingEnabled="false" />

    <ImageView
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:id="@+id/PicBorrowedStall"
        android:layout_gravity="right"
        android:minWidth="100dp"
        android:minHeight="20dp"
        android:layout_row="0"
        android:layout_column="16"
        android:layout_rowSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descritption"
        android:id="@+id/DescriptionBorrowedStall"
        android:layout_row="1"
        android:layout_column="0" />

</GridLayout>