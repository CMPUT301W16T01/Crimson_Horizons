<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/DeleteNotificationBtn"
        android:layout_gravity="right"
        android:layout_weight="0.04"
        android:layout_below="@+id/NotificationDate"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:id="@+id/NotificationBidder"
        android:onClick="adapterClickUserName"
        android:text="bidder"
        android:layout_weight="0.07"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/NotificationBidAmt" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/NotificationDate"
        android:text="date"
        android:layout_weight="0.06"
        android:layout_below="@+id/NotificationBidder"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/NotificationBidAmt"
        android:text="bidamt"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/DeleteNotificationBtn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NotificationPicture"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:layout_alignTop="@+id/NotificationDate"
        android:layout_toStartOf="@+id/DeleteNotificationBtn"
        android:layout_marginEnd="24dp" />

</RelativeLayout>